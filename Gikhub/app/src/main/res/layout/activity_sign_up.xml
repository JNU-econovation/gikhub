<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="143dp"
        android:fontFamily="@font/pretendardextrabold"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toEndOf="@+id/logo_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="90dp"
        android:layout_height="63dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="136dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gikhub_logo" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="240dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <TextView
                android:id="@+id/login_msg"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="@string/signup"
                android:fontFamily="@font/pretendardmedium"
                android:textSize="18sp"
                android:textColor="@color/black" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email_btn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="viewStart">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_info_button"
                    android:hint="학교이메일"
                    android:fontFamily="@font/pretendardregular"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwd_btn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="viewStart">

                <EditText
                    android:id="@+id/passwd"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_info_button"
                    android:hint="비밀번호"
                    android:fontFamily="@font/pretendardregular"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name_btn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="viewStart">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_info_button"
                    android:fontFamily="@font/pretendardregular"
                    android:hint="이름"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nickname_btn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_marginBottom="10dp"
                android:textAlignment="viewStart">

                <EditText
                    android:id="@+id/nickname"
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_info_button"
                    android:fontFamily="@font/pretendardregular"
                    android:hint="닉네임"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phone_number_btn"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="340dp"
                android:layout_height="53dp"
                android:layout_marginBottom="30dp">

                <EditText
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_info_button"
                    android:fontFamily="@font/pretendardregular"
                    android:hint="휴대폰 번호"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/login_btn"
                android:layout_width="340dp"
                android:layout_height="50dp"
                android:background="@drawable/button_round_login"
                android:text="@string/signup"
                android:fontFamily="@font/pretendardmedium"
                android:textSize="16sp"
                android:textColor="@color/white" />



        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>