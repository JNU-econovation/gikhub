<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/framelayout_view"
    tools:context=".TalkViewFragment">
        <LinearLayout
            android:id="@+id/talk_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/talk_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendardbold"
                android:gravity="center"
                android:text="@string/talk"
                android:textColor="@color/blue"
                android:textSize="25sp" />
            <LinearLayout
                android:id="@+id/divider"
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@color/blue"
                android:orientation="vertical" />
            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="title"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendardmedium"
                android:textSize="21sp"/>
            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="contentcontentcontent"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="writer"
                android:layout_gravity="center"
                android:gravity="right"/>
            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="2023년 12월 11일 11:11"/>
            <LinearLayout
                android:id="@+id/divider_bottom"
                android:layout_width="330dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:background="@color/blue"
                android:orientation="vertical" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="24dp"
                android:id="@+id/context_group"
                android:layout_width="330dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

</FrameLayout>